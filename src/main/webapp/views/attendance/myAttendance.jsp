        <script>
            // ÂÖ®ÂüüËÆäÊï∏
            let currentAttendanceData = [];

            // È†ÅÈù¢ËºâÂÖ•ÊôÇÂàùÂßãÂåñ
            document.addEventListener("DOMContentLoaded", function () {
                loadCourses();
                loadAttendanceData();
            });

            // ËºâÂÖ•Ë™≤Á®ãÈÅ∏È†Ö
            function loadCourses() {
                fetch("${pageContext.request.contextPath}/api/course/ByStudentId")
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(courses => {
                    	console.log("ÂæûÂæåÁ´ØÂõû‰æÜÁöÑË™≤Á®ãË≥áÊñôÔºö", courses);
                        const select = document.getElementById('courseSelect');
                        // Ê∏ÖÁ©∫ÁèæÊúâÈÅ∏È†ÖÔºà‰øùÁïôÁ¨¨‰∏ÄÂÄãÔºâ
                        select.innerHTML = '<option value="">ÂÖ®ÈÉ®Ë™≤Á®ã</option>';

                        courses.data.forEach(course => {
                            const option = document.createElement('option');
                            option.value = course.id;
                            option.textContent = course.name;
                            select.appendChild(option);
                        });
                    })
                    .catch(error => {
                        console.error("Ë™≤Á®ãËºâÂÖ•Â§±Êïó:", error);
                        showError("Ë™≤Á®ãËºâÂÖ•Â§±ÊïóÔºåË´ãÈáçÊñ∞Êï¥ÁêÜÈ†ÅÈù¢");
                    });
            }

            // ËºâÂÖ•Âá∫Áº∫Âã§Ë≥áÊñô
            function loadAttendanceData(courseId = "", lessonDate = "") {
                showLoading();

                // Âª∫Á´ãÊü•Ë©¢ÂèÉÊï∏
                const params = new URLSearchParams();
                if (courseId) params.append('courseId', courseId);
                if (lessonDate) params.append('lessonDate', lessonDate);
                
                console.log("Êü•Ë©¢Ê¢ù‰ª∂Ôºö", courseId, lessonDate); 
                console.log("URL Êü•Ë©¢Â≠ó‰∏≤Ôºö", params.toString()); 

                const url = `/EAMS/api/attendances/studentsearch?${params.toString()}`;
                console.log("ÁµÑË£ùÂæåÁöÑÊü•Ë©¢ URLÔºö", url);
                
                fetch(url)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        console.log("ServletÂõûÂÇ≥Ë≥áÊñôÔºö", data);
                        updateAttendanceTable(data);
                    })
                    .catch(error => {
                        console.error("Âá∫Áº∫Âã§Ë≥áÊñôËºâÂÖ•Â§±Êïó:", error);
                        showError("Âá∫Áº∫Âã§Ë≥áÊñôËºâÂÖ•Â§±ÊïóÔºåË´ãÈáçÊñ∞Êï¥ÁêÜÈ†ÅÈù¢");
                    });
             
            }

            // Êõ¥Êñ∞Áµ±Ë®àÂçÄÂ°ä
            function updateStatsSection(stats) {
                document.getElementById('presentCount').textContent = stats.present || 0;
                document.getElementById('absentCount').textContent = stats.absent || 0;
                document.getElementById('lateCount').textContent = stats.late || 0;
                document.getElementById('leaveCount').textContent = stats.leave || 0;

                // È°ØÁ§∫Áµ±Ë®àÂçÄÂ°ä
                const statsSection = document.getElementById('statsSection');
                if (stats.present > 0 || stats.absent > 0 || stats.late > 0 || stats.leave > 0) {
                    statsSection.style.display = 'grid';
                } else {
                    statsSection.style.display = 'none';
                }
            }

            // Êõ¥Êñ∞Âá∫Áº∫Âã§Ë°®Ê†º
            function updateAttendanceTable(attendances) {
                const tbody = document.getElementById('attendanceTableBody');

                if (!attendances || attendances.length === 0) {
                    tbody.innerHTML = `
            <tr>
                <td colspan="6" class="no-data">
                    Êü•ÁÑ°Âá∫Áº∫Âã§Á¥ÄÈåÑ
                    <p style="margin-top: 1rem; font-size: 14px; color: #999;">
                        Ë´ãÈÅ∏Êìá‰∏çÂêåÁöÑÊü•Ë©¢Ê¢ù‰ª∂ÊàñËÅØÁπ´ËÄÅÂ∏´Á¢∫Ë™çË™≤Á®ãÂÆâÊéí
                    </p>
                </td>
            </tr>
        `;
                    return;
                }

                tbody.innerHTML = attendances.map(attendance => {
                	console.log("Âá∫Â∏≠ÁãÄÊÖãÔºö", attendance.statusText);
                    console.log("ÂÅáÂñÆÁãÄÊÖãÔºö", attendance.leaveRequestStatusText);
                	console.log("ÊØè‰∏ÄÁ≠Ü attendanceÔºö", attendance);
                    const statusClass = getStatusClass(attendance.statusText);
                    const leaveStatusClass = getLeaveStatusClass(attendance.leaveRequestStatusText);

                    return `
            <tr>
                <td>\${attendance.courseName || '-'}</td>
                <td>\${attendance.lessonDate || '-'}</td>
                <td>Á¨¨ \${attendance.periodStart || '-'}-\${attendance.periodEnd || '-'} ÁØÄ</td>
                <td>
                    <span class="status-badge \${statusClass}">
                        \${attendance.statusText || '-'}
                    </span>
                </td>
                <td>\${attendance.remark || '-'}</td>
                <td>
                    <span class="leave-badge \${leaveStatusClass}">
                        \${attendance.leaveRequestStatusText || '-'}
                    </span>
                </td>
            </tr>
        `;
                }).join('');
            }


            // ÂèñÂæóÁãÄÊÖãÊ®£ÂºèÈ°ûÂà•
            function getStatusClass(status) {
                switch (status) {
                    case 'Âá∫Â∏≠': return 'status-present';
                    case 'Áº∫Â∏≠': return 'status-absent';
                    case 'Ë´ãÂÅá': return 'status-leave';
                    case 'Êú™ÈªûÂêç': return 'status-unmarked';
                    default: return '';
                }
            }

            // ÂèñÂæóÂÅáÂñÆÁãÄÊÖãÊ®£ÂºèÈ°ûÂà•
            function getLeaveStatusClass(status) {
            	if (!status) return 'leave-none'; 
                switch (status) {
                    case 'Â∑≤Ê†∏ÂáÜ': return 'leave-approved';
                    case 'ÂæÖÂØ©Ê†∏': return 'leave-pending';
                    case 'Êú™ÈÄöÈÅé': return 'leave-rejected';
                    default: return '';
                }
            }

            // È°ØÁ§∫ËºâÂÖ•‰∏≠
            function showLoading() {
                const tbody = document.getElementById('attendanceTableBody');
                tbody.innerHTML = `
                <tr>
                    <td colspan="6" class="loading">
                        ËºâÂÖ•‰∏≠...
                    </td>
                </tr>
            `;
                document.getElementById('statsSection').style.display = 'none';
            }

            // È°ØÁ§∫ÈåØË™§Ë®äÊÅØ
            function showError(message) {
                const tbody = document.getElementById('attendanceTableBody');
                tbody.innerHTML = `
                <tr>
                    <td colspan="6" class="error-message">
                        ${message}
                    </td>
                </tr>
            `;
                document.getElementById('statsSection').style.display = 'none';
            }

            // Êü•Ë©¢Ë°®ÂñÆÊèê‰∫§‰∫ã‰ª∂
            document.getElementById('searchForm').addEventListener('submit', function (e) {
                e.preventDefault();

                const courseId = document.getElementById('courseSelect').value;
                const lessonDate = document.getElementById('lessonDate').value;
               
                console.log("‰ΩøÁî®ËÄÖÈÄÅÂá∫Êü•Ë©¢Ôºö", courseId, lessonDate);
                loadAttendanceData(courseId, lessonDate);
            });
        </script>
